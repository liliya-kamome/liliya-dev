---
interface Props {
  children: any[];
  title: string;
  ogTitle: string;
  desc?: string;
}

const { title } = Astro.props;
const { desc } = Astro.props;
const { ogTitle } = Astro.props;
---

<!doctype html>
<html lang="jp">
  <head prefix="og: http://ogp.me/ns#">
    <meta charset="UTF-8" />
    <meta name="description" content={desc} />
    <meta property="og:url" content={Astro.url.origin} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={desc} />
    <meta property="og:site_name" content="liliya.dev" />
    <meta property="og:image" content="https://www.lilia.dev/assets/ogp.png" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0">
    <link
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
      href="https://cdn.jsdelivr.net/npm/destyle.css@3.0.2/destyle.css"
    />
    <!-- material icon -->
    <link
      rel="stylesheet"
      media="print"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <!-- material icon -->
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png" />
    <link rel="manifest" href="/assets/favicons/site.webmanifest" />
    <link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css"
    />
  </head>
  <body>
    <slot />
    <!-- Prism.js のコアファイル -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"
      defer></script>
    <!-- Prism.js のオートローダー-->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"
      defer></script>
  </body>
</html>
<style is:global>
  html {
    font-size: 62.5%;
    color: #5a564d;
    transition: 0.5s all;
    line-height: 1.8;
  }
  @font-face {
    font-family: MPLUSRounded1;
    font-display: swap;
    src: url('../../public/assets/fonts/MPLUSRounded1c-Light.ttf') format('TrueType');
  }
  @media screen and (max-width: 480px) {
    html {
      line-height: 1.6;
    }
  }
  body {
    position: relative;
    font-family: 'MPLUSRounded1', sans-serif;
  }
  .body-lock {
    position: fixed;
    left: 0;
    width: 100%;
  }
  main {
    max-width: 1080px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1.6em;
  }
  .paginationActive {
    color: #4861c6;
  }
  .pagefind-ui__drawer {
    position: absolute;
  }
  /* microCMS用のスタイル */
  .post-section {
    margin-bottom: 5em;
  }
  .post-container {
    max-width: 1080px;
    width: 100%;
    margin: 15em auto auto;
    padding: 0 1.6em;
  }
  .post-container__title {
    text-align: center;
    font-size: 2.5rem;
    word-break: auto-phrase;
  }
  @media screen and (max-width: 480px) {
    .post-container__title {
      font-size: 2rem;
    }
  }
  .post-container__publishedAt {
    text-align: center;
    margin-top: 1em;
    font-size: 1rem;
    margin-bottom: 3em;
  }
  .post-container__h2 {
    font-size: 2.3rem;
    font-weight: 300;
    margin-bottom: 1em;
    margin-top: 2em;
  }
  @media screen and (max-width: 480px) {
    .post-container__h2 {
      font-size: 2.3rem;
      font-weight: 300;
      margin-bottom: 1em;
      margin-top: 2em;
    }
  }
  @media screen {
  }
  .post-container__h3 {
    font-size: 2rem;
    font-weight: 300;
    margin-bottom: 1em;
    margin-top: 2em;
  }
  @media screen and (max-width: 480px) {
    .post-container__h3 {
      font-size: 1.7rem;
    }
  }
  .post-container__subTitle {
    font-size: 1.8rem;
    font-weight: 300;
    margin-bottom: 0.5em;
    margin-top: 1em;
    border-bottom: solid 1px #c669d9;
    width: fit-content;
  }
  @media screen and (max-width: 480px) {
    .post-container__subTitle {
      font-size: 1.6rem;
    }
  }
  .post-container__text {
    font-size: 1.6rem;
    line-height: 1.8;
    margin-bottom: 1em;
  }
  @media screen and (max-width: 480px) {
    .post-container__text {
      font-size: 1.4rem;
    }
  }
  .post-container__text-bold {
    font-weight: bold;
    color: #c669d9;
  }
  .post-container__link {
    color: #b4a3df;
  }
  .post-container__image {
    border-radius: 10px;
    max-width: 600px;
    width: 100%;
    height: auto;
  }
  .post-container__picture {
    img {
      max-width: 1048px;
      width: 100%;
      height: auto;
    }
  }
  .post-container__reference {
    font-size: 1.6rem;
    margin-left: 2rem;
    list-style: circle;
  }
  @media screen and (max-width: 480px) {
    .post-container__reference {
      font-size: 1.4rem;
    }
  }
  .post-container__reference-item {
    a {
      text-decoration: underline;
    }
  }
  .post-container__item {
    font-size: 1.6rem;
  }
  .pagefind-ui__result-title {
    font-size: 1.6rem;
  }
  .w1024-block {
    display: none;
  }
  @media screen and (min-width: 1024px) {
    .w1024-block {
      display: block;
    }
  }
  .w820-block {
    display: none;
  }
  @media screen and (min-width: 820px) {
    .w820-block {
      display: block;
    }
  }
  .w683-none {
    display: block;
  }
  @media screen and (min-width: 683px) {
    .w683-none {
      display: none;
    }
  }
</style>
